    "tsx": "^3.12.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.8.1",
